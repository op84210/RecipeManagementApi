@RecipeManagementApi_HostAddress = https://localhost:7120

###
# 健康檢查
GET {{RecipeManagementApi_HostAddress}}/swagger

###
# 取得所有材料
GET {{RecipeManagementApi_HostAddress}}/api/materials
Accept: application/json

###
# 取得材料（帶篩選）
GET {{RecipeManagementApi_HostAddress}}/api/materials?search=麵粉&category=Ingredient&page=1&pageSize=10
Accept: application/json

###
# 根據 ID 取得材料
GET {{RecipeManagementApi_HostAddress}}/api/materials/1
Accept: application/json

###
# 建立新材料
POST {{RecipeManagementApi_HostAddress}}/api/materials
Content-Type: application/json

{
  "name": "高筋麵粉",
  "description": "用於製作麵包的高筋麵粉",
  "category": "Ingredient",
  "unit": "公斤",
  "costPerUnit": 45.50,
  "supplier": "麵粉供應商"
}

###
# 更新材料
PUT {{RecipeManagementApi_HostAddress}}/api/materials/1
Content-Type: application/json

{
  "name": "高筋麵粉（更新）",
  "description": "優質高筋麵粉，適合製作麵包",
  "category": "Ingredient",
  "unit": "公斤",
  "costPerUnit": 50.00,
  "supplier": "優質麵粉供應商"
}

###
# 刪除材料
DELETE {{RecipeManagementApi_HostAddress}}/api/materials/1

###
# 取得所有產品
GET {{RecipeManagementApi_HostAddress}}/api/products
Accept: application/json

###
# 取得產品（帶篩選）
GET {{RecipeManagementApi_HostAddress}}/api/products?search=麵包&category=Bakery&page=1&pageSize=10
Accept: application/json

###
# 根據 ID 取得產品
GET {{RecipeManagementApi_HostAddress}}/api/products/1
Accept: application/json

###
# 建立新產品
